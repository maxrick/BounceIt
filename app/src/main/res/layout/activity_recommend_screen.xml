<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    tools:context=".views.RecommendScreen"
    android:background="@drawable/app_background2"
    >

    <fragment
        android:id="@+id/fragment3"
        android:name="layout.GemFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:tag="gemFragment" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:text="Get more gems by recommending this App. Send an activation code to a friend. With this code your friend will get a free gem. \nMake sure your friend also sends you your thank you code back. Enter the thank you code below to receive your free gem."
        android:id="@+id/recommendText"
        android:layout_below="@+id/fragment3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="First: "
        android:id="@+id/labelFirst"
        android:layout_alignBottom="@+id/recommendButton"
        android:layout_toLeftOf="@+id/sendCodeButton"
        android:layout_toStartOf="@+id/sendCodeButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recommend app"
        android:padding="5dp"
        android:id="@+id/recommendButton"
        android:layout_gravity="center_horizontal|bottom"
        android:onClick="buttonRecommendAppClicked"
        android:layout_below="@+id/recommendText"
        android:layout_centerHorizontal="true"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Then: "
        android:id="@+id/labelThen"
        android:layout_alignBottom="@+id/sendCodeButton"
        android:layout_toLeftOf="@+id/sendCodeButton"
        android:layout_toStartOf="@+id/sendCodeButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send recommendation code"
        android:padding="5dp"
        android:id="@+id/sendCodeButton"
        android:layout_gravity="center_horizontal|bottom"
        android:onClick="buttonSendCodeClicked"
        android:layout_below="@+id/recommendButton"
        android:layout_centerHorizontal="true"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/thankYouCode"
            android:hint="@string/enter_thank_you_code"
            android:lines="1"
            android:layout_marginBottom="32dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activate"
            android:id="@+id/thankYouCodeActivate"
            android:onClick="buttonActivateThankYouCodeClicked" />
    </LinearLayout>

</RelativeLayout>
