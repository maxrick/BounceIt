<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    tools:context=".views.RecommendScreen"
    android:background="@drawable/app_background2"
    >

    <fragment
        android:id="@+id/fragment3"
        android:name="layout.GemFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:tag="gemFragment" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:text="@string/recommend_instructions"
        android:id="@+id/recommendText"
        android:layout_below="@+id/fragment3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/first"
        android:id="@+id/labelFirst"
        android:layout_alignBottom="@+id/recommendButton"
        android:layout_toLeftOf="@+id/sendCodeButton"
        android:layout_toStartOf="@+id/sendCodeButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/recommend_app"
        android:padding="5dp"
        android:id="@+id/recommendButton"
        android:layout_gravity="center_horizontal|bottom"
        android:onClick="buttonRecommendAppClicked"
        android:layout_below="@+id/recommendText"
        android:background="@drawable/buttonshape_cornered"
        android:layout_centerHorizontal="true"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/then"
        android:id="@+id/labelThen"
        android:layout_alignBottom="@+id/sendCodeButton"
        android:layout_toLeftOf="@+id/sendCodeButton"
        android:layout_toStartOf="@+id/sendCodeButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/send_recommendation_code"
        android:padding="5dp"
        android:id="@+id/sendCodeButton"
        android:background="@drawable/buttonshape_cornered"
        android:layout_gravity="center_horizontal|bottom"
        android:onClick="buttonSendCodeClicked"
        android:layout_below="@+id/recommendButton"
        android:layout_centerHorizontal="true"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin" />

    <fragment
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:name="layout.HomeFragment"
        android:id="@+id/homeButton"
        android:tag="homeFragment"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/sendCodeButton"
        />

</RelativeLayout>
